<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>com.web.ProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ProductInfoServlet</servlet-name>
        <servlet-class>com.web.ProductInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>ProductInfoServlet</servlet-name>
    <url-pattern>/productInfo</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AdminProductListServlet</servlet-name>
        <servlet-class>com.web.AdminProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductListServlet</servlet-name>
        <url-pattern>/adminProductList</url-pattern>
    </servlet-mapping>


    <servlet>
    <servlet-name>AdminCategoryListServlet</servlet-name>
    <servlet-class>com.web.AdminCategoryListServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>AdminCategoryListServlet</servlet-name>
        <url-pattern>/adminCategoryList</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AdminProductAddServlet</servlet-name>
        <servlet-class>com.web.AdminProductAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductAddServlet</servlet-name>
        <url-pattern>/adminProductAdd</url-pattern>
    </servlet-mapping>
</web-app>